---
import Layout from '../layouts/Layout.astro';
import FloatingBox from '../components/SmallBox.astro';
import { Config } from '../config';
import { Image } from 'astro:assets';
---

<Layout title="Jorge Delgadillo">
  <div class="flex mx-auto justify-center items-center md:mt-8 mt-16 px-3">
    <div class="flex flex-col gap-8">
      <!-- <h1 class="text-2xl">hey, I'm Jorge üë®‚Äçüíª</h1> -->
      <div class="md:w-1/5 w-2/3">
        <img
          width="234"
          height="311"
          class="rounded-lg"
          alt="A picture of me in the Pyrenees mountains."
          srcset="
                https://res.cloudinary.com/dzepeibjw/image/upload/w_234,f_auto,q_auto/v1/Aldem-01/photos/eticc4vfd7pnrq6pm6df 234w,
                https://res.cloudinary.com/dzepeibjw/image/upload/w_468,f_auto,q_auto/v1/Aldem-01/photos/eticc4vfd7pnrq6pm6df 468w"
          sizes="(max-width: 768px) 234px, 468px"
          src="https://res.cloudinary.com/dzepeibjw/image/upload/f_auto,q_auto/v1/Aldem-01/photos/eticc4vfd7pnrq6pm6df"
        />
        <p class="text-sm text-neutral-600 mt-1">
          Creative, Problem Solver, Engineer, Founder, Storyteller.
        </p>
      </div>

      <p
        class="md:text-5xl text-2xl font-medium md:w-5/6 md:mt-72 md:mb-20 my-10 leading-tight"
      >
        Hey, I'm <span class="text-[#FF480F] font-medium">Jorge</span> ‚Äîa creative
        Software Engineer. <br /> I'm fueled by a deep passion to innovate and solve
        challenges, creating impactful solutions in the ever evolving tech world.
      </p>
      <!-- <p>
        I create educational content for developers, teaching them about web
        development, JavaScript and TypeScript, React and Next.js, and more.
        This comes in all forms: blog posts, videos, tweets, conference talks,
        and workshops. You can watch some of my favorites below.
      </p> -->
      <div>
        <!-- <h1 class="w-full border-b border-b-neutral-700">Selected Work</h1> -->
        <article class="flex flex-col gap-8">
          <header class="flex w-full flex-row justify-between gap-2">
            <h3
              class="md:text-7xl text-5xl border-b border-b-neutral-200 w-full font-medium"
            >
              Selected Work
            </h3>
            <!-- <a
              href={Config.me.projectLink}
              class="text-sm text-primary underline decoration-dashed underline-offset-8"
              target="_self"
              rel="noreferrer"
              >See all projects
            </a> -->
          </header>
          <section
            class="grid grid-cols-1 gap-4 sm:grid-cols-2 justify-center items-stretch md:mb-0 mb-10"
          >
            {
              Object.keys(Config.projects).map((project) => (
                <FloatingBox
                  title={project}
                  href={
                    Config.projects[project as keyof typeof Config.projects].url
                  }
                  tags={
                    Config.projects[project as keyof typeof Config.projects]
                      .tags
                  }
                />
              ))
            }
          </section>
        </article>
      </div>
    </div>
  </div>
</Layout>
